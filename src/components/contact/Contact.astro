---
import Line from '../../svgs/Line.astro';
import PlantRight from '../../svgs/PlantRight.astro';
import PlantLeft from '../../svgs/PlantLeft.astro';
import Round from '../../svgs/Round.astro';
import ContactForm from './ContactForm.astro';
import ContactLinks from './ContactLinks.astro';
---

<section
  id="contact-section"
  class="relative flex flex-col justify-center items-center mt-32 md:mt-52 lg:mt-80 mb-40 mx-auto max-w-screen-xl lg:px-6"
>
  <h2 class="relative z-10 text-4xl md:text-5xl traking-wide font-bold uppercase">
    Contacto
  </h2>
  <h3 class="relative z-10 text-2xl md:text-4xl font-extralight tracking-widest mt-8">
    Â¿Listo para dar el salto?
  </h3>
  <div
    class="relative z-10 max-w-[500px] md:max-w-[530px] lg:max-w-full p-4 md:p-10 xl:px-16 xl:py-20 bg-[#FFF3EF] rounded-3xl shadow-xl mt-8 w-full flex flex-col items-center lg:flex-row lg:justify-center lg:gap-16 lg:mt-10"
  >
    <ContactLinks />
    <ContactForm />
  </div>
  <Line class="hidden md:block absolute -top-6 left-4 w-[200px] lg:top-10 lg:left-4 lg:w-[250px] z-0" />
  <Line class="hidden md:block absolute top-4 left-8 w-[200px] lg:top-28 lg:left-14 lg:w-[250px] z-0" />
  <Round stroke="#E8E8E8" class="hidden md:block absolute top-32 right-2 w-[200px] lg:-top-16 lg:right-4 lg:w-[250px]"  />
  <PlantRight class="hidden md:block absolute -bottom-20 right-0  w-[200px] lg:w-[250px] xl:-right-20"  />
  <PlantLeft class="hidden md:block absolute -bottom-20 left-0 w-[200px] lg:w-[250px] xl:-left-20"  />
</section>
